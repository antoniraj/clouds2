<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
 <name>CCE</name>
 <!-- The following elements are optional and free of formatting constraints -->
 <creationDate>2012-11-27</creationDate>
 <author>Sundaram</author>
 <authorEmail>maradnus@gmail.com</authorEmail>
 <authorUrl>http://www.google.com</authorUrl>
 <copyright>Copyright Info</copyright>
 <license>License Info</license>
 <!--  The version string is recorded in the components table -->
 <version>3.01</version>
 <!-- The description is optional and defaults to the name -->
 <description>This component is used to help teachers and school management to automate Continuous Comprehensive Evaluation..</description>
 <!-- Site Main File Copy Section -->
 <!-- Note the folder attribute: This attribute describes the folder
      to copy FROM in the package to install therefore files copied
      in this section are copied from /site/ in the package -->
 <files folder="site">
  <folder>images</folder>
  <filename>cce.php</filename>
  <filename>index.html</filename>
  <filename>controller.php</filename>
  <folder>controllers</folder>
  <folder>models</folder>
  <folder>views</folder>
  <folder>js</folder>
  <folder>css</folder>
  <folder>libchart</folder>
  <folder>uploads</folder>
  <folder>studentsphoto</folder>
  <folder>staffphoto</folder>
 </files>
 
 <install>
  <sql>
    <file charset="utf8" driver="mysql">install.sql</file>
  </sql>
 </install>
 <uninstall>
  <sql>
    <file charset="utf8" driver="mysql">uninstall.sql</file>
  </sql>
 </uninstall>
 
 <administration>
  <!-- Administration Menu Section -->
  <menu>CCE</menu>
 
  <!-- Administration Main File Copy Section -->
  <files folder="admin">
   <filename>controller.php</filename>
   <filename>cce.php</filename>
   <filename>index.html</filename>
   <filename>install.sql</filename>
   <filename>uninstall.sql</filename>
   <filename>models/cce.php</filename>
   <filename>models/index.html</filename>
   <filename>views/cce/view.html.php</filename>
   <filename>views/cce/index.html</filename>
   <filename>views/cce/tmpl/default.php</filename>
   <filename>views/cce/tmpl/index.html</filename>
  </files>  
 
 </administration>
</install>

